<h1>Edit Contact for <%= @company["name"] %></h1>

<form action="/contacts/<%= @contact["id"] %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <p>
    <label for="first_name_input">First Name</label>
    <input type="text" name="first_name" value="<%= @contact["first_name"] %>" id="first_name_input">

    <label for="last_name_input">Last Name</label>
    <input type="text" name="last_name" value="<%= @contact["last_name"] %>" id="last_name_input">
  </p>

  <p>
    <label for="email_input">Email</label>
    <input type="text" name="email" value="<%= @contact["email"] %>" id="email_input">

    <label for="phone_number_input">Phone</label>
    <input type="text" name="phone_number" value="<%= @contact["phone_number"] %>" id="phone_number_input">
  </p>

  <button>Save</button>
  <a href="/contacts/<%= @contact["id"] %>">Cancel</a>
</form>